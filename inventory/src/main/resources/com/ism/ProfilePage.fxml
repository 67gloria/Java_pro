<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="30.0" prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e0eafc);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ism.controllers.ProfilePageController">
  <children>
    <Label text="User Profile" textFill="#2e2e2e" style="-fx-font-weight: bold;">
      <font>
        <Font name="Segoe UI Semibold" size="32.0" />
      </font>
    </Label>
    <Label fx:id="profileInfo" text="Name: John Doe&#10;Email: john@example.com&#10;Role: Employee" textFill="#3949ab" style="-fx-font-size: 18px;" />
    <Button fx:id="returnBtn" text="Return to Home" style="-fx-background-color: #4f8cff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 8 24 8 24;" />
  </children>
</VBox>
