<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.DropShadow?>
<VBox prefHeight="500.0" prefWidth="800.0" spacing="30" alignment="TOP_CENTER" style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e0eafc); -fx-background-radius: 10; -fx-padding: 32;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ism.controllers.ManageCategoriesPageController">
    <children>
        <Label text="Manage Categories" textFill="#2e2e2e" style="-fx-font-size: 28; -fx-font-weight: bold;">
            <effect>
                <DropShadow color="#b0c4de" radius="4" />
            </effect>
        </Label>
        <TableView fx:id="categoryTable" prefHeight="200" prefWidth="500" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #b0c4de; -fx-table-cell-border-color: #e0eafc;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80.0" />
                <TableColumn fx:id="colName" text="Name" prefWidth="320.0" />
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="addBtn" text="Add Category" style="-fx-background-color: #43d17a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 8 24 8 24;" />
            <Button fx:id="editBtn" text="Edit Category" style="-fx-background-color: #f7b731; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 8 24 8 24;" />
            <Button fx:id="deleteBtn" text="Delete Category" style="-fx-background-color: #eb3b5a; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 8 24 8 24;" />
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="returnBtn" text="Return" style="-fx-background-color: #4f8cff; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 8 24 8 24;" />
        </HBox>
    </children>
</VBox>
